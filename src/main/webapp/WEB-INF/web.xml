<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>/jsp/index.jsp</welcome-file>
    </welcome-file-list>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/WEB-INF/img/*</url-pattern>
        <url-pattern>*.ico</url-pattern>
        <url-pattern>*.jpg</url-pattern>
        <url-pattern>*.png</url-pattern>
        <url-pattern>*.css</url-pattern>
        <url-pattern>*.woff</url-pattern>
        <url-pattern>*.ttf</url-pattern>
        <url-pattern>*.svg</url-pattern>
        <url-pattern>*.eot</url-pattern>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ua.lutsenko.banking.controller.user.LoginServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/bank24/personalCabinet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>ua.lutsenko.banking.controller.user.RegistrationServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/bank24/welcome</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllAccounts</servlet-name>
        <servlet-class>ua.lutsenko.banking.controller.account.AllAccountsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AllAccounts</servlet-name>
        <url-pattern>/bank24/allActiveAccounts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PaymentOperations</servlet-name>
        <servlet-class>ua.lutsenko.banking.controller.account.PaymentOperationServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>PaymentOperations</servlet-name>
        <url-pattern>/bank24/PaymentOperations</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>currentOperationHistory</servlet-name>
        <servlet-class>ua.lutsenko.banking.controller.account.CurrentHistoryServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>currentOperationHistory</servlet-name>
        <url-pattern>/bank24/currentOperationsHistory</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ManagementServlet</servlet-name>
        <servlet-class>ua.lutsenko.banking.controller.account.ManagementServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>ManagementServlet</servlet-name>
        <url-pattern>/bank24/managements</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>NewApplicationFormServlet</servlet-name>
        <servlet-class>ua.lutsenko.banking.controller.account.NewApplicationServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>NewApplicationFormServlet</servlet-name>
        <url-pattern>/bank24/managements/openingNewAccount/form</url-pattern>
    </servlet-mapping>




    <servlet>
        <servlet-name>AddressFormServlet</servlet-name>
        <servlet-class>ua.lutsenko.banking.controller.user.AddressServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>AddressFormServlet</servlet-name>
        <url-pattern>/bank24/managements/openingNewAccount/addressForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BlockAccountServlet</servlet-name>
        <servlet-class>ua.lutsenko.banking.controller.account.BlockAccountServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>BlockAccountServlet</servlet-name>
        <url-pattern>/bank24/managements/blockAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RefillBalanceServlet</servlet-name>
        <servlet-class>ua.lutsenko.banking.controller.account.RefillBalanceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RefillBalanceServlet</servlet-name>
        <url-pattern>/bank24/managements/refillBalance</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>BlockedAccountServlet</servlet-name>
        <servlet-class>ua.lutsenko.banking.controller.account.BlockedAccountsServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>BlockedAccountServlet</servlet-name>
        <url-pattern>/bank24/blockedAccounts</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>NewApplicationsServlet</servlet-name>
        <servlet-class>ua.lutsenko.banking.controller.account.ApplicationsServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>NewApplicationsServlet</servlet-name>
        <url-pattern>/bank24/newApplications</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <servlet-class>ua.lutsenko.banking.controller.account.AccountServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/bank24/personalCabinet/success</url-pattern>
    </servlet-mapping>




    <servlet>
        <servlet-name>CreateNewAccountServlet</servlet-name>
        <servlet-class>ua.lutsenko.banking.controller.account.NewAccountServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>CreateNewAccountServlet</servlet-name>
        <url-pattern>/bank24/createNewAccountForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>ua.lutsenko.banking.controller.user.LogOutServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/welcomePage</url-pattern>
    </servlet-mapping>


    <!-- <servlet>
         <servlet-name>ChangeLanguageServlet</servlet-name>
         <servlet-class>ua.lutsenko.banking.controller.ChangeLanguageServlet</servlet-class>
     </servlet>


     <servlet-mapping>
         <servlet-name>ChangeLanguageServlet</servlet-name>
         <url-pattern>/</url-pattern>
     </servlet-mapping>-->


    <!--DB Connection start-->
    <resource-ref>
        <res-ref-name>jdbc/pbank24</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <!--DB Connection end-->

    <!--Session config start-->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <!--Session config end-->

    <!--encoding filter start-->
    <filter>

        <filter-name>EncodingFilter</filter-name>
        <filter-class>ua.lutsenko.banking.filter.EncodingFilter</filter-class>

        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>


    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--encoding filter end-->


    <!--auth filter start-->
    <filter>
        <filter-name>CheckAuthFilter</filter-name>
        <filter-class>ua.lutsenko.banking.filter.CheckAuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CheckAuthFilter</filter-name>
        <url-pattern>/*</url-pattern>

    </filter-mapping>
    <!--auth filter end-->

</web-app>